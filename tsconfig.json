{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "outDir": "build",
    "rootDir": "src",
    "allowJs": true,
    "types": ["@types/node"]
  },
  "exclude": [".yarn"],
  "include": ["src/**/*"]
}
